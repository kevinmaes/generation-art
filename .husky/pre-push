#!/bin/sh
echo "ğŸ” Running pre-push checks with auto-fix..."

# Run checks with auto-fix
pnpm checks

# Check if there are any changes after running checks
if [ -n "$(git status --porcelain)" ]; then
  echo "ğŸ“ Auto-fixes were applied. Creating commit..."
  git add -A
  git commit -m "fix: auto-fix linting, formatting, and JSON issues"
  echo "âœ… Created auto-fix commit. This will be included in your push."
else
  echo "âœ… All checks passed, no fixes needed!"
fi
