{
  "name": "generation-art",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:setup": "./scripts/setup-env.sh && pnpm dev",
    "build": "tsc && vite build",
    "gedcom:clean": "rm -rf ./client/public/generated",
    "gedcom:build": "pnpm gedcom:clean && tsx cli/import/build-gedcom.ts",
    "gedcom:build:maes": "pnpm gedcom:clean && tsx cli/import/build-gedcom.ts //Users/kevinmaes/github.com/kevinmaes/generation-art/gedcom/Kevin-Maes-Tree-2025/Kevin-Maes-Tree-2025.ged",
    "dev:full": "pnpm gedcom:build && pnpm dev",
    "typecheck": "tsc --build --verbose",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "validate:json": "ajv validate -s .claude/settings.schema.json -d .claude/settings.local.json",
    "validate:json:fix": "tsx scripts/fix-json-duplicates.ts",
    "checks": "pnpm lint:fix && pnpm typecheck && pnpm format && pnpm validate:json:fix && pnpm validate:json",
    "checks:no-fix": "pnpm lint && pnpm typecheck && pnpm format:check && pnpm validate:json",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "task:parse": "tsx src/tasks/parseGedcom.ts",
    "task:output": "tsx src/tasks/outputJson.ts",
    "prepare": "npx husky",
    "ci:local": "act --workflows .github/workflows/quality-app.yml --workflows .github/workflows/test-unit-app.yml",
    "ci:local:quality": "act --workflows .github/workflows/quality-app.yml --workflows .github/workflows/quality-cli.yml --workflows .github/workflows/quality-shared.yml",
    "ci:local:tests": "act --workflows .github/workflows/test-unit-app.yml --workflows .github/workflows/test-unit-cli.yml --workflows .github/workflows/test-unit-shared.yml",
    "ci:local:all": "act"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.29",
    "@types/p5": "^1.7.6",
    "@xstate/store": "^3.9.2",
    "ai": "^5.0.0",
    "gedcom-ts": "^1.1.1",
    "leva": "^0.10.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.536.0",
    "p5": "^2.0.3",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-json-view": "^1.21.3",
    "tsx": "^4.19.4",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/stream-json": "^1.7.8",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv-cli": "^5.0.0",
    "autoprefixer": "10.4.17",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "postcss": "8.4.35",
    "stream-json": "^1.9.1",
    "tailwindcss": "3.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
