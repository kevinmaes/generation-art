{
  "name": "generation-art",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:gedcom": "tsx cli/import/build-gedcom.ts",
    "build:gedcom:reset": "rm -rf ./generated",
    "build:gedcom:example": "pnpm build:gedcom ./examples/kennedy/kennedy.ged",
    "postbuild:gedcom": "cp -r generated client/public/ 2>/dev/null || mkdir -p client/public && cp -r generated client/public/",
    "postbuild:gedcom:example": "cp -r generated client/public/ 2>/dev/null || mkdir -p client/public && cp -r generated client/public/",
    "copy-generated": "cp -r generated client/public/ 2>/dev/null || mkdir -p client/public && cp -r generated client/public/",
    "dev:with-gedcom": "pnpm build:gedcom && pnpm copy-generated && pnpm dev",
    "dev:full": "pnpm build:gedcom:example && pnpm copy-generated && pnpm dev",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "checks": "pnpm lint && pnpm typecheck && pnpm format",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "task:parse": "tsx src/tasks/parseGedcom.ts",
    "task:output": "tsx src/tasks/outputJson.ts"
  },
  "dependencies": {
    "@types/node": "^22.15.29",
    "@types/p5": "^1.7.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "gedcom-ts": "^1.1.1",
    "p5": "^2.0.3",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "tsx": "^4.19.4",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "10.4.17",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
