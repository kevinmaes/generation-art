{
  "name": "generation-art",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:setup": "./scripts/setup-env.sh && pnpm dev",
    "build": "tsc && vite build",
    "build:gedcom": "tsx cli/import/build-gedcom.ts",
    "build:gedcom:reset": "rm -rf ./generated",
    "build:gedcom:example": "pnpm build:gedcom ./examples/kennedy/kennedy.ged",
    "postbuild:gedcom": "cp -r generated client/public/ 2>/dev/null || mkdir -p client/public && cp -r generated client/public/",
    "postbuild:gedcom:example": "cp -r generated client/public/ 2>/dev/null || mkdir -p client/public && cp -r generated client/public/",
    "copy-generated": "cp -r generated client/public/ 2>/dev/null || mkdir -p client/public && cp -r generated client/public/",
    "dev:with-gedcom": "pnpm build:gedcom && pnpm copy-generated && pnpm dev",
    "dev:full": "pnpm build:gedcom:example && pnpm copy-generated && pnpm dev",
    "typecheck": "tsc --build --verbose",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "checks": "pnpm lint && pnpm typecheck && pnpm format",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "task:parse": "tsx src/tasks/parseGedcom.ts",
    "task:output": "tsx src/tasks/outputJson.ts",
    "prepare": "npx husky",
    "ci:local": "act --workflows .github/workflows/quality-app.yml --workflows .github/workflows/test-unit-app.yml",
    "ci:local:quality": "act --workflows .github/workflows/quality-app.yml --workflows .github/workflows/quality-cli.yml --workflows .github/workflows/quality-shared.yml",
    "ci:local:tests": "act --workflows .github/workflows/test-unit-app.yml --workflows .github/workflows/test-unit-cli.yml --workflows .github/workflows/test-unit-shared.yml",
    "ci:local:all": "act"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.29",
    "@types/p5": "^1.7.6",
    "ai": "^5.0.0",
    "gedcom-ts": "^1.1.1",
    "leva": "^0.10.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.539.0",
    "p5": "^2.0.3",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-json-view": "^1.21.3",
    "tsx": "^4.19.4",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "10.4.17",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
