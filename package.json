{
  "name": "generation-art",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:gedcom": "tsx src/scripts/build-gedcom.ts",
    "build:kennedy": "pnpm build:gedcom kennedy.ged",
    "prebuild": "pnpm build:gedcom",
    "dev:with-gedcom": "pnpm build:gedcom && pnpm dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "task:parse": "tsx src/tasks/parseGedcom.ts",
    "task:augment": "tsx src/tasks/augmentData.ts",
    "task:output": "tsx src/tasks/outputJson.ts",
    "build:gedcom:example": "tsx src/scripts/build-gedcom.ts kennedy.ged"
  },
  "dependencies": {
    "@types/node": "^22.15.29",
    "@types/p5": "^1.7.6",
    "gedcom-ts": "^1.1.1",
    "p5": "^2.0.3",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsx": "^4.19.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "10.4.17",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  }
}
